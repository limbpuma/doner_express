---
import { getI18N } from '../../utils/i18n';
const { currentLocale } = Astro
const i18n = getI18N({currentLocale});
---

<div class="features-section container mx-auto px-4 text-white">
    <div class="text-center mb-12">
        <span class="text-sm font-semibold uppercase text-orange-500">{i18n.FEATURES.SECTION_TITLE}</span>
        <h2 class="text-3xl font-bold mt-1 leading-tight tracking-tight uppercase">{i18n.FEATURES.DESCRIPTION}</h2>
        
    </div>
    
    <div class="flex flex-wrap justify-center">
        {i18n.FEATURES.CARDS.map(card => (
            <div class="w-full md:w-1/2 lg:w-1/3 p-4">
                <div class="bg-gray-800 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 p-6 flex flex-col items-center text-center hover:bg-gray-900 transition-colors duration-300" style="min-height: 250px; max-height: 250px;">
                    <div class="text-white mb-4">
                        <i class={`fas ${card.ICON} fa-3x`}></i>
                    </div>
                    <h5 class="text-xl font-semibold mb-2">
                        <a href="services-detail.html" class="text-orange-400 hover:text-orange-600">{card.TITLE}</a>
                    </h5>
                    <i class="fas fa-minus text-yellow-500 mb-2"></i>
                    <p class="text-gray-400 mb-4">{card.DESCRIPTION}</p>
                </div>
            </div>
        ))}
    </div>
</div>
